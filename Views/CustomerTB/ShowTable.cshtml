@model IEnumerable<AjaxDataTable.Models.CustomerTB>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />


<div class="row">
    <div class="col-sm-12 ">
        <br />
        <div style="width:90%; margin:0 auto;">
            <table id="customertb" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Country</th>
                        <th>Phone Number</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>


    @*<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>*@

    <script>
   $(document).ready(function () {
       $('#customertb').DataTable({
           "processing": true,
           "serverSide": true,
           "filter": true,
           "orderMulti": false,
           "order": [[1, 'asc']],
            "ajax": {
                'url': '@Url.Action("LoadData", "CustomerTB")',
                "type": "POST",
                "datatype": "json"
                },
                "language": {
                "emptyTable": "No record found.",
                "processing":
                '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '
                },
                "columnDefs": [{
                "targets": [0],
                "visible": false,
                "searchable": false
                }],
                "columns": [
                { "data": "customerId", "name": "CustomerId", "autoWidth": true },
                { "data": "customerName", "name": "CustomerName", "autoWidth": true },
                { "data": "address", "name": "Address", "autoWidth": true },
                { "data": "city", "name": "City", "autoWidth": true },
                { "data": "country", "name": "Country", "autoWidth": true },
                { "data": "phoneNo", "name": "PhoneNo", "autoWidth": true },
                {
                "render": function (data, type, full, meta) {
                return '<a class="btn btn-info" href="/CustomerTB/Edit/' + full.CustomerId + '">Edit</a>';
                }
                },
                {
                data: null,
                render: function (data, type, row) {
                return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.CustomerId + "');>Delete</a>" ;
                           }
                           },
                           ],
                           });
                           });
                           function DeleteData(CustomerId) {
                           if (confirm("Are you sure you want to delete ....?")) {
                           Delete(CustomerId);
                           } else {
                           return false;
                           }
                           }
                           function Delete(CustomerId) {
                           var url='@Url.Content("~/")' + "CustomerTB/Delete" ;
                           $.post(url, { ID: CustomerId }, function (data) {
                           if (data) {
                           oTable=$('#customertb').dataTable();
                           oTable.draw();
                           } else {
                           alert("Something went wrong!");
                           }
                           })
                           }



    </script>



